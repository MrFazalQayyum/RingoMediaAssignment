@model RingoMediaAssignment.Models.Department

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<p class="text-danger">@ViewBag.NotDeleteMassage</p>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Logo)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Logo" alt="Department Logo" class="img-thumbnail" style="max-width: 50px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubDepartments)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var subDepartment in Model.SubDepartments)
                {
                    <li>@subDepartment.Name</li>
                }
            </ul>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParentDepartment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentDepartment.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
